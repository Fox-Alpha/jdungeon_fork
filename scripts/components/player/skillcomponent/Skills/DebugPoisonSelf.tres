script/source = "extends SkillComponentResource

var status: String = \"Poison\"

func _effect(information: SkillUseInfo):
	var statusComp: StatusEffectComponent = information.get_entity_component(information.user, StatusEffectComponent.COMPONENT_NAME)
	if not statusComp is StatusEffectComponent:
		return
		

	statusComp.add_status_effect(status, information.user)
	statusComp.set_stacks(status, 100)
